{
    "name": "bocmah/psalm-reactphp-promise-plugin",
    "description": "Psalm plugin for react/mysql",
    "type": "psalm-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Artem Trushkin",
            "email": "atrushkin1@gmail.com"
        }
    ],
    "require": {
        "vimeo/psalm": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2",
        "squizlabs/php_codesniffer": "^3.3",
        "react/mysql": "^0.5.4"
    },
    "extra": {
        "psalm" : {
            "pluginClass": "Bocmah\\PsalmReactPhpMysqlPlugin\\Plugin"
        }
    },
    "autoload": {
        "psr-4": {
            "Bocmah\\PsalmReactPhpMysqlPlugin\\": ["."]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bocmah\\PsalmReactPhpMysqlPlugin\\Tests\\": "tests"
        }
    },
    "scripts" : {
        "check": [
            "@cs-check",
            "@test",
            "@analyze"
        ],
        "analyze": "psalm",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "minimum-stability": "dev"
}
